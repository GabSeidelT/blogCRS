<div class="card-body">
    <%= form_with model: @category do |form| %>
        <div class="mb-3">
            <span class="text-rose m-2 font-weight-bold">  Nome : </span>
            <label class="form-label"></label>
            <%= form.text_field :name, maxlength: 16, class: "bg-light form-control" %>
        </div>
        <div class="mb-3">
            <span class="text-rose m-2 font-weight-bold">  Descrição : </span>
            <label class="form-label"></label>
            <%= form.text_area :description, maxlength: 255, class: "bg-light form-control", size: "60x10" %>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', categories_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>