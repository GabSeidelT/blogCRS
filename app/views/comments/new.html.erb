<div class="card-body">
    <%= form_with model: @comment do |form| %>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Coment√°rio : </p>
            <label class="form-label"></label>
            <%= form.text_field :content, maxlength: 16, class: "bg-light form-control", onfocus: "focused(this)", onfocusout: "defocused(this)" %>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', root_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>