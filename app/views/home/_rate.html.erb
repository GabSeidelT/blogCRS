<h3 class="text-light font-weight-bold"> Avaliar </h3>
<%= form_with model: @ratings do |f| %>
    <% (1..5).each do |rating| %>
        <%= radio_button_tag "rate", rating %>
        <i class="fas fa-star"></i>
    <% end %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit('Rate') %> 
<% end %>