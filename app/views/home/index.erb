<main>
  <!-- INTRODUCTION -->
    <section class="mt-8 text-center container">
      <div class="row mb-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-light text-white ">Album example</h1>
          <p class="lead text-white ">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        </div>
      </div>
    </section>
  <!-- POSTS AREA -->
    <div class="container album py-5">
      <div class="container">
        <!-- CATEGORY BAR -->
          <div class="container bg-gradient-light shadow-none border-radius-xl mb-5">
            <div class="text-center container">
              <p>
                <% @categories.each do |category| %>
                  <a href="#" class="btn bg-gradient-dark btn-outline-primary my-2"><%= category.name %></a>
                <% end %>
              </p>
            </div>
          </div>
        <!-- POSTS GRID -->
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% @posts.each do |post| %>
              <div class="col-lg-4 col-md-6 mt-4 mb-4">
                <div class="card z-index-2 bg-gradient-light">
                  <!-- POST IMG -->
                    <div class="card-header shadow-primary border-radius-lg pe-1 page-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                          <%= image_tag post.image.variant(resize_to_fill: [365, 218]) %>
                    </div>
                  <!-- POST TXT -->
                    <div class="card-body text-dark container-fluid py-1 px-3"style="height:250px;">
                      <h6 class="card-text text-rose"><%= post.name %></h6>
                      <p class="card-text"><%= post.summary %>.</p>
                      <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted fixd-bottom"><%= post.created_at %></small>
                        <div class="card-footer" :last-child>
                          <%= link_to "Ver", post_path(id: post.id), :class => 'btn btn-sm text-dark btn-outline-secondary' %>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
</main>