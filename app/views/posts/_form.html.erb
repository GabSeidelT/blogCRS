<div class="card-body">
    <%= form_with model: @post do |form| %>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Usuário : </p>
            <%= form.select(:user_id, @users.collect {|user| [user.email, user.id]}, class: "bg-light form-control", prompt: 'select') %>
            <label class="form-label"></label-->
        </div>
        
            <%= form.input :img, as: :file %>
        
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Nome : </p>
            <label class="form-label"></label>
            <%= form.text_field :name, class: "bg-light form-control", onfocus: "focused(this)", onfocusout: "defocused(this)" %>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Resumo : </p>
            <label class="form-label"></label>
            <%= form.text_area :summary, class: "bg-light form-control", size: "60x10" %>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Conteúdo : </p>
            <label class="form-label"></label>
            <%= form.text_area :content, class: "bg-light form-control", size: "60x10" %>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', posts_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>