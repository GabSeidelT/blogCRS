<div class="fill">
  <div class="container p-0 bg-gradient-light border-radius-lg">
    <div class="card card-plain">
      <div class="card-header">
        <h4 class="font-weight-bolder">Entrar</h4>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Email : </p>
            <label class="form-label"></label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Senha : </p>
            <label class="form-label"></label>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Entrar", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
          </div>
        <% end %>
      </div>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>