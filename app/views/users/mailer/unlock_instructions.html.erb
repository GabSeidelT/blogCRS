<div class="fill">
    <div class="container p-0 bg-gradient-light border-radius-lg">
        <div class="card card-plain">
            <div class="card-header">
                <h4 class="font-weight-bolder">Hello <%= @resource.email %>!</h4>
            </div>
            <div class="card-body">
                <p class="text-rose m-2 font-weight-bold">Your account has been locked due to an excessive number of unsuccessful sign in attempts.</p>

                <p class="text-rose m-2 font-weight-bold">Click the link below to unlock your account:</p>

                <p class="text-rose m-2 font-weight-bold"><%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token) %></p>
            </div>
        </div>
    </div>
</div>

