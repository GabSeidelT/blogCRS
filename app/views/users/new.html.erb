<div class="card-body bg-gradient-light border-radius-lg m-4 ml-8">
    <%= form_for @user, url: user_create_path, method: :post do |form| %>
        <div class="mb-3">
            <span class="text-rose m-2 font-weight-bold">  Email : </span>
            <%= form.text_field :email, class: "bg-light form-control"%>
        </div>
        <div class="mb-3">
            <span class="text-rose m-2 font-weight-bold">  Senha : </span>
            <%= form.text_area :password, maxlength: 6, class: "bg-light form-control" %>
        </div>
        <div class="mb-3">
            <li>
                <%= form.select(:role_id, @roles.collect {|role| [role.username, role.id]}, class: "bg-light form-control", prompt: 'Cargo') %>
            </li>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', users_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>