<div class="card-body bg-gradient-light border-radius-lg container ml-8">
    <%= form_with model: @user do |form| %>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Usu√°rio : <%= @user.email %> </p>
            <label class="form-label"></label>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Email : </p>
            <label class="form-label"></label>
            <%= form.text_field :email, maxlength: 16, class: "bg-light form-control"%>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Senha : </p>
            <label class="form-label"></label>
            <%= form.text_area :password, maxlength: 6, class: "bg-light form-control" %>
        </div>
        <div class="input-group input-group-outline mb-3">
            <% @roles.each do |role| %>
                    <li>
                        <%= check_box_tag 'role_ids[]', role.id %>
                        <%= h role.username %>
                    </li>
            <% end %>   
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', users_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>