<div class="card-body bg-gradient-light border-radius-lg container ml-8">
    <%= form_with model: @user do |form| %>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Usu√°rio : <%= @user.email %> </p>
            <label class="form-label"></label>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Email : </p>
            <label class="form-label"></label>
            <%= form.text_field :email, class: "bg-light form-control"%>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Senha : </p>
            <label class="form-label"></label>
            <%= form.text_area :password, maxlength: 6, disabled: true, class: "bg-light form-control" %>
        </div>
        <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Confirmar senha : </p>
            <label class="form-label"></label>
            <%= form.text_area :password_confirmation, maxlength: 6, disabled: true, class: "bg-light form-control" %>
        </div>
        <div class="container">
            <input type="checkbox" id="pass" name="pass">
            <label for="pass">alterar senha?</label>
        </div>
        <div class="input-group input-group-outline mb-3">
            <%= form.select(:role_id, @roles.collect {|role| [role.username, role.id]}, class: "bg-light form-control", prompt: 'select') %>
        </div>
            <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', users_path, class: "bg-light btn btn-lg btn-outline-primary text-primary btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>

<script>
    $( "#pass" ).click(function() {
        if ($('#pass').is(":checked") == true) {
            $('#user_password').attr("disabled", false);
            $('#user_password_confirmation').attr("disabled", false);
        }
        else { 
            $('#user_password').attr("disabled", 'disabled');
            $('#user_password_confirmation').attr("disabled", 'disabled');
        }
    })
</script>