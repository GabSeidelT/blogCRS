<div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Tabela de Usu√°rios</h6>
                <div class="mx-2">
                  <%= link_to new_user_path, class: "btn btn-secondary" do %>
                    novo
                    <i class="fas fa-plus"></i>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary font-weight-bolder opacity-7">Email</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td>
                          <p class="font-weight-bold mb-0"><%= user.email %></p>
                        </td>
                        <td>
                          <p class="font-weight-bold mb-0"><%= user.created_at %></p>
                        </td>
                        <td class="align-middle">
                          <%= link_to 'Editar', edit_user_path(id: user.id), class: "btn btn-sm text-secondary font-weight-bold" %>
                          <%= button_to 'Deletar', user_path(id: user.id), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm text-white bg-primary font-weight-bold" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>