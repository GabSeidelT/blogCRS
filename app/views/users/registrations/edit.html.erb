<div class="fill">
  <div class="container p-0 bg-gradient-light border-radius-lg">
      <div class="card card-plain">
        <div class="card-header">
            <h4 class="font-weight-bolder">Editar Usuário</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>


            <div class="input-group input-group-outline mb-3">
              <p class="text-rose m-2 font-weight-bold">  Email : </p>
              <label class="form-label"></label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Atualmente esperando confirmação para: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="input-group input-group-outline mb-3">
              <p class="text-rose m-2 font-weight-bold">  Senha : </p>
              <label class="form-label"></label>
              <%= f.password_field :password, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <em class="text-dark m-2 font-weight-bold">(<%= @minimum_password_length %> caracteres apenas) </em>
              <% end %><br />
            </div>

            <div class="input-group input-group-outline mb-3">
              <p class="text-rose m-2 font-weight-bold">  Confirmar senha : </p>
              <label class="form-label"></label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <i class="text-dark m-2 font-weight-bold"> (Deixe vazio se não deseja alterar)  </i>
            </div>

            <div class="input-group input-group-outline mb-3">
              <p class="text-rose m-2 font-weight-bold">  Senha atual : </p>
              <label class="form-label"></label>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
                <i class="text-dark m-2 font-weight-bold"> (Necessário para confirmar alterações)  </i>
            </div>

            <div class="actions">
              <%= f.submit "Atualizar", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>            
            </div>
          <% end %>
          <div class="input-group input-group-outline mb-3">
              <h3 class="text-rose m-2 font-weight-bold">  Cancelar minha conta </h3><br />
              <div class="input-group mb-3">
                <p class="text-rose m-2 font-weight-bold">Infeliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>
              </div>
          </div>

          <%= link_to "Voltar", :back %>
        </div>
    </div>
</div>
