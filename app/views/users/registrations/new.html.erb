<div class="page-header min-vh-100">
  <div class="container">
    <div class="row">
      <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
        <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column primary justify-content-center" style="background-image: url('https://lh3.googleusercontent.com/ClsXsZfciqC2LuZ9lIWkK6exN0xb9IQEOE8IBNqXz9n5u_2GGWXspSKQo2cgY81bBWOr19-P-aJbEEpXkk9kFtD5gN2buzKBJ9k1S65o6w'); background-size: cover;">
        </div>
      </div>
      <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
        <div class="card card-plain bg-white text-black">
          <div class="card-header">
            <h4 class="font-weight-bolder ">Cadastro</h4>
            <p class="mb-0">Insira e-mail e senha para cadastrar-se</p>
            <p class="mb-0"><%= render "users/shared/error_messages", resource: resource %></p>
          </div>
          <div class="card-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="input-group input-group-outline focused is-focused mb-3" >
                  <label class="form-label">Email</label>
                  <%= f.email_field :email,class:"form-control", autocomplete: "email" %>
                </div>
                <div class="input-group input-group-outline focused is-focused mb-3">
                  <label class="form-label">Senha<% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caracteres apenas)</em>
                      <% end %>
                  </label>
                  <%= f.password_field :password,class:"form-control", autocomplete: "new-password" %>
                  <br />
                </div>
                <div class="input-group input-group-outline focused is-focused mb-3">
                  <label class="form-label">Confirmar Senha</label>
                  <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "new-password" %>
                </div>
                <div class="actions text-center">
                  <%= f.submit "Confirmar", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>            
                </div>
              <% end %>
            </form>
          <div class="card-footer text-center pt-0 px-lg-2 px-1">
            <p class="mb-2 text-sm mx-auto">
              <%= render "users/shared/links" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
